@model MVC_StokTakipOtomasyonu.Models.Entity.Urunler
@{
    ViewBag.Title = "MiktarEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ürün Miktar Ekleme</h2>
<div class="container">
    @using (Html.BeginForm("MiktarEkle", "Urunler", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(x => x.ID)
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Miktari)
            @Html.TextBoxFor(x => x.Miktari, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-secondary">Miktar Ekle</button>

        </div>
    }

</div>



@using MVC_StokTakipOtomasyonu.Models.Entity
@model List<Kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Kategori Ana Sayfası</h2>

</div>

<div class="container">
    @if (User.IsInRole("A") || User.IsInRole("U"))
    {
        <div style="float:left">
            <a href="/Kategoriler/Ekle/" class="btn btn-success" style="margin-top:15%">Add New</a>
        </div>
    }
</div>


<table class="table table-bordered" style="margin-top:1%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <td>
                Kategori
            </td>
            <td>
                Açıklama
            </td>
            <td>Sil</td>
            <td>Güncelle</td>
            <td>Markalar</td>
            <td>Ürünler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Kategori</td>
                <td>@item.Aciklama</td>
                <td><a href="/Kategoriler/SilBilgiGetir/@item.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Kategoriler/GuncelleBilgiGetir/@item.ID" class="btn   btn-primary">Güncelle</a></td>
                <td><a href="/Kategoriler/Markalar/@item.ID" class="btn btn-secondary">Markalar</a></td>
                <td><a href="/Kategoriler/Urunler/@item.ID" class="btn btn-info">Ürünler</a></td>
            </tr>
        }
    </tbody>
</table>

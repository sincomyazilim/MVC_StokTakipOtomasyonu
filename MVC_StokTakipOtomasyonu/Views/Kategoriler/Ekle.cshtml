@model  MVC_StokTakipOtomasyonu.MyModel.MyKategoriler

@{

    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Ekleme</h2>
<div class="container">
    @using (Html.BeginForm("Ekle", "Kategoriler", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div>
            <div class="form-group">
                Kategori:@Html.TextBoxFor(x => x.Kategori, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Kategori, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                Açıklama:@Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "text-danger" })


            </div>
            <div class="form-group">
                <button class="btn btn-success">Kategori Ekle</button>
            </div>
        </div>
    }
</div>
